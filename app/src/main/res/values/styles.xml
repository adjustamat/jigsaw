    <style name="JigsawPuzzle_Theme" parent="Base.Theme.JigsawPuzzleFLOSS"/>

    <style name="JigsawPuzzle.MainMenu.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_marginTop">@dimen/mainmenu_item_margin</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Menu</item>
    </style>
    <style name="JigsawPuzzle.MainMenu.Text.ListTitle">
        <item name="android:layout_marginTop">@dimen/mainmenu_item_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="JigsawPuzzle.MainMenu.Text.ListPlaceholder">
        <item name="android:layout_marginTop">@dimen/mainmenu_item_margin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/color_placeholder_text</item>
    </style>
    <style name="JigsawPuzzle.MainMenu.List">
        <item name="layoutManager">GridLayoutManager</item>
        <item name="android:nestedScrollingEnabled">true</item>
        <item name="android:orientation">vertical</item>
    </style>

